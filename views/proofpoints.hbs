								<tr>
									<th colspan=2>Company</th>
									<th>Title</th>
                  <th>Description</th>
									<th>Tags</th>
								</tr>
							</thead>
							<tbody>
								{{#each proofpoints}}
									<tr class="odd gradeX valuedrivers">
										<td>
											<a href='{{this.url}}'><img width=50 src='{{this.image}}'></a>
										</td>
										<td><a href='{{this.url}}'>{{this.company}}</a></td>
										<td><a href='{{this.url}}'>{{this.title}}</a></td>
										<td><a href='{{this.url}}'>{{this.description}}</a></td>
										<td class="text-left">
											{{#each this.tags}}
												<a href='{{this.url}}'><span class="label label-info">{{this}}</span></a>
											{{/each}}
										</td>
									</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
			<!-- /.col-lg-12 -->

		</div>
		<!-- /.row -->
	</div>
	<!-- /#page-wrapper -->
</div>

