<div id="wrapper">
      <!-- Navigation -->

      <div id="page-wrapper">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">Cases for Change</li>
        </ol>

          <div class="row">
              <div class="col-lg-12">
                  <h1 class="page-header"><i class="fa fa-briefcase fa-fw"></i>Cases for Change</h1>
                  <div class='pull-right'>
                    <p data-placement="top" data-toggle="tooltip" title="Add Case for Change ">
                    <button class="ui right floated btn btn-success btn-lg" data-title="add" data-toggle="modal" data-target="#add"> <span class="glyphicon glyphicon-plus"></span> Add Value Driver
                    </button>
                    </p>
                  </div>
              </div>
              <!-- /.col-lg-12 -->
          </div>
          <div class="col-lg-12">
              <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
                  {{successMsg}}
              </div>
              <div id="danger" class="alert alert-danger" {{#if noErrorMsg}}hidden{{/if}}>
                  {{errorMsg}}
              </div>
          </div>
          <!-- /.row -->
          <div class="row">
              <div class="col-lg-12">
                  <div class="panel panel-default">
                      <div class="panel-body">
                          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                              <thead>
                                  <tr>
                                      <th>Name</th>
                                      <th>Description</th>
                                      <th>Case For Change</th>
                                      <th>Tags</th>
                                  </tr>
                              </thead>
                              <tbody>
                                {{#each allvaluedrivers}}
                                  <tr class="odd gradeX valuedrivers">
                                      <td><a href='{{this.url}}'>{{this.valuedriver}}</a></td>
                                      <td><a href='{{this.url}}'>{{this.valuedriver_desc}}</a></td>
                                      <td><a href='{{this.url}}'>
                                        {{#each this.casesforchange}}
                                        {{this.name}}</br>
                                        {{/each}}</a>
                                      </td>
                                      <td class="center">
                                        {{#each this.tags}}
                                          <a href='{{this.url}}'><span class="label label-info">{{this}}</span></a></br>
                                        {{/each}}
                                      </td>
                                  </tr>
                                {{/each}}
                              </tbody>
                          </table>
                      </div>
                      <!-- /.panel-body -->
                  </div>
                  <!-- /.panel -->
              </div>
              <!-- /.col-lg-12 -->

          </div>
          <!-- /.row -->
      </div>
      <!-- /#page-wrapper -->
  </div>
  <!-- Add Dialog -->
  <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                  <h4 class="modal-title custom_align" id="Heading">Add Value Driver</h4>
              </div>
              <div class="modal-body text-left">
                <form action='/valuedriver' METHOD='POST'>
                	<div class="form-group">
                		<label for="name" class="control-label">Value Driver Name</label>
                		<input type="text" class="form-control" id="name" name="name" placeholder="">
                	</div>
                  <div class="form-group">
                    <label for="shortname" class="control-label">Short Name</label>
                    <input type="text" class="form-control" id="shortname" name="shortname" placeholder="">
                  </div>

                	<div class="form-group">
                		<label for="slug" class="control-label">Slug</label>
                		<input type="text" class="form-control" id="slug" name="slug" placeholder="">
                	</div>
                  <div class="form-group">
                    <label for="icon" class="control-label">Icon</label>
                    <input type="text" class="form-control" id="icon" name="icon" placeholder="fa-automobile">
                  </div>
                	<div class="form-group">
                		<label for="description" class="control-label">Description</label>
                    <textarea class='form-control' name='description' id='description'></textarea>
                	</div>
                  <div class='col-md-6'>
                  	<div class="form-group">
                  		<label for="beforescenarios" class="control-label">Before Scenarios (one per line)</label>
                  		<textarea class="form-control" id="beforescenarios" name="beforescenarios" placeholder="..."></textarea>
                  	</div>
                  </div>
                  <div class='col-md-6'>

                  <div class="form-group">
                		<label for="negativeconsequences" class="control-label">Negative Consequences (one per line)</label>
                		<textarea class="form-control" id="negativeconsequences" name="negativeconsequences" placeholder="..."></textarea>
                	</div>
                </div>
                <div class='col-md-6'>

                  <div class="form-group">
                		<label for="afterscenarios" class="control-label">After Scenarios (one per line)</label>
                		<textarea class="form-control" id="afterscenarios" name="afterscenarios" placeholder="..."></textarea>
                  </div>
                </div>
                <div class='col-md-6'>

                  <div class="form-group">
                		<label for="positivebusinessoutcomes" class="control-label">Positive Business Outcomes (one per line)</label>
                		<textarea class="form-control" id="positivebusinessoutcomes" name="positivebusinessoutcomes" placeholder="..."></textarea>
                  </div>
                </div>

                  <div class="form-group">
                    <label for="requiredcapabilities" class="control-label">Required Capabilities (one per line)</label>
                    <textarea class="form-control" id="requiredcapabilities" name="requiredcapabilities" placeholder="..."></textarea>
                  </div>
                  <div class='col-md-6'>

                  <div class="form-group">
                    <label for="howwedoit" class="control-label">How we do it (one per line)</label>
                    <textarea class="form-control" id="howwedoit" name="howwedoit" placeholder="..."></textarea>
                  </div>
                </div>
                <div class='col-md-6'>

                  <div class="form-group">
                    <label for="howwedoitbetter" class="control-label">How we do it BETTER (one per line)</label>
                    <textarea class="form-control" id="howwedoitbetter" name="howwedoitbetter" placeholder="..."></textarea>
                  </div>
                </div>

                	<div class="form-group"> <!-- Submit Button -->
                		<button type="submit" class="btn btn-primary">Save</button>
                	</div>

                </form>


              </div>
          <!-- /.modal-content -->
          </div>
      <!-- /.modal-dialog -->
      </div>
  </div>
