<div id="page-wrapper">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">
    <div class="col-lg-12">
      <form action="/search" method="POST">
      <div class="input-group input-group-lg">
          <input type="text" name='q' value='{{q}}' class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-secondary" type="submit">SEARCH</button>
          </span>
      </div>
    </form>
  </div>
</div>
  </div>
  </div>
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4>Value Drivers</h4>
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>Value Driver</th>
							</tr>
						</thead>
						<tbody>
							{{#each vdresults}}
								<tr class="success">
									<td><a href='{{this.url}}'>{{this.valuedriver}}</a></td>
								</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
				<!-- /.table-responsive -->
			</div>
			<!-- /.panel-body -->
		</div>
  </div>
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4>Proof Points</h4>
				</div>
				<!-- /.panel-heading -->
				<div class="panel-body">
					<div class="table-responsive">
            {{#if ppresults}}
						<table class="table">
							<thead>
								<tr>
									<th>Company</th>
									<th>Title</th>
								</tr>
							</thead>
							<tbody>
								{{#each ppresults}}
									<tr class="success">
										<td><a href='{{this.url}}'>{{this.company}}</a></td>
										<td><a href='{{this.url}}'>{{this.title}}</a></td>
									</tr>
								{{/each}}
							</tbody>
						</table>
            {{else }}
              No Proof Point Results Found.
            {{/if}}
					</div>
					<!-- /.table-responsive -->
				</div>
				<!-- /.panel-body -->
			</div>
		</div>
		<!-- /.page -->
